<?xml version="1.0"?>
<izpack:configurationactions version="5.0"
                             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                             xmlns:izpack="http://izpack.org/schema/configurationactions"
                             xsi:schemaLocation="http://izpack.org/schema/configurationactions http://izpack.org/schema/5.0/izpack-configurationactions-5.0.xsd">
  <pack name="Base">
  	<configurationaction order="afterpack">
  		<configurables>
			<propertyfile todir="${INSTALL_PATH}/configPatch" 
	                  	  keepOldKeys="false" keepOldValues="true" 
	        			  cleanup="true" overwrite="true">
		        <fileset dir="${INSTALL_PATH}/configSrc">
		            <include name="*.properties"/>
		            <exclude name="test3.properties"/>
		        </fileset>
	        </propertyfile>  	
	        <propertyfile fromfile="${INSTALL_PATH}/configSrc/test3.properties"
	        	          tofile="${INSTALL_PATH}/configPatch/test3.properties"
	                	  keepOldKeys="false" keepOldValues="false"
					      cleanup="true" overwrite="true">
	          	<entry key="3property2" operation="keep"/>
	        </propertyfile>		
  		</configurables>
  	</configurationaction>
  </pack>
</izpack:configurationactions>